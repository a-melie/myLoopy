{% extends 'base.html.twig' %}

{% block title %}{{ choosenPatient.firstName| capitalize ~ ' ' ~ choosenPatient.surname |upper }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-9">
                {% for category, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ category }} text-center container mt-5">
                            {{ message }}
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
                        </div>
                    {% endfor %}
                {% endfor %}
                <input type="hidden" data-id="{{ choosenPatient.id }}">
                <div class="row">
                    <!--chart-->
                    <div class="col-5">
                        <p>Patient : {{ choosenPatient.firstName| capitalize ~ ' ' ~ choosenPatient.surname |upper }} <br>
                            Date de Naissance : {{ choosenPatient.birthday | date ('d/m/Y') }}
                        </p>
                        {{ include('/doctor/patient/_form_edit_limit.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="col-3">
                {% include '/doctor/_sidenav.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}

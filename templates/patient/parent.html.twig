{% extends 'base.html.twig' %}

{% block title %}{{ patient.firstName | capitalize ~ ' ' ~ patient.surname | upper }}{% endblock %}

{% block body %}
    <input type="hidden" id="PatientId" data-id="{{ patient.id }}">
    <div class="container-fluid bg-light-grey min-vh-100">
        <div class="row">
            {% for category, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ category }} text-center container mt-5">
                        {{ message }}
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row mt-5">
            <div class="col-6 d-flex flex-column">
                <div class="m-auto">
                    <h3><span class="show-icon bg-white text-center mr-3 shadow"><i class="fas fa-user-injured mt-1"></i></span> {{ patient.firstName| capitalize ~ ' ' ~ patient.surname | upper }}</h3>
                    <h4 class="font-weight-lighter"><span class="show-icon bg-white text-center mr-3 shadow"><i class="fas fa-birthday-cake mt-1"></i></span> {{ patient.birthday | date ('d/m/Y') }} - {{ patient.age }} ans</h4>
                    <h4 class="font-weight-lighter"><span class="show-icon bg-white text-center mr-3 shadow"><i class="fas fa-weight mt-1"></i></span> Poids {{ patient.weight }} Kg</h4>
                </div>
            </div>
            <div class="col-6 d-flex flex-column">
                <div class="m-auto">
                    <h4 class="font-weight-lighter"><span class="show-icon bg-white text-center mr-3 shadow"><i class="fas fa-virus mt-1"></i></span> Diabète Insulino Dépendant</h4>
                    <h4 class="font-weight-lighter"><span class="show-icon bg-white text-center mr-3 shadow"><i class="fas fa-stethoscope mt-1"></i></span> {{ patient.doctor.doctorName }}</h4>
                    <h4 class="font-weight-lighter"><span class="show-icon bg-white text-center mr-3 shadow"><i class="fas fa-phone-square mt-1"></i></span> 06.48.32.72.64</h4>
                </div>
            </div>
        </div>
        <hr class="parents-line">
        <div class="canvas pb-5">
            <canvas id="glycemia"></canvas>
        </div>
    </div>
{% endblock %}

{% block javascript %}
{{ encore_entry_script_tags('glycemia') }}
{% endblock %}
